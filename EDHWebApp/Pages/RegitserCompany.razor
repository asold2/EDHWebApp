@page "/RegisterCompany"
@using EDHWebApp.Model
@using EDHWebApp.Data
@inject NavigationManager NavigationManager;
@inject ICompaniesData CompaniesData
<h3>RegitserCompany</h3>


<EditForm Model="@companyToRegister" OnValidSubmit="@RegisterCompany">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    
    <div class="form-group">Company Name :
        <InputText @bind-Value="@companyToRegister.Name"/>
    </div>
    <div class="form-group">Company Email:
        <InputText @bind-Value="@companyToRegister.Email"/>
    </div>
   
    <p class="action">
        <button class="btn btn-outline-dark" type="submit">Create</button>
    </p>
    
    
</EditForm>


@code {
    private Company companyToRegister = new Company();

    private void RegisterCompany()
    {
        CompaniesData.RegisterCompany(companyToRegister);
    }

}